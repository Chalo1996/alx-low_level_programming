#Usage:
#all #build object c_code
#object #build the executable
#CC #gcc recursive expanded variable
#SRC #All c files: main.c school.c
#OBJ #Object files
#NAME #executable

.PHONY := all main

CC = gcc
SRC = main.c school.c
OBJ = main.o school.o
NAME = school

all: main

main: $(OBJ)
	$(CC) main.o school.o -o $(NAME)

c_code: $(SRC)
	$(CC) -c $(SRC)
